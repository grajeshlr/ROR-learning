<h1 style="color:blue;margin-left: 40px;text-decoration: underline;text-shadow: 3px 3px pink;" >welcome my post_app</h1>


<ul>
<li><%= button_to 'create', new_post_path,method: 'get' %></li>

  <% @posts.each do |post| %>
    <li><%= link_to post.content, post_path(post)  %></li>
    <li><%= button_to 'edit', edit_post_path(post),method: 'get'%></li>
    <li><%= button_to 'remove', post_path(post),method: :delete %></li>
  <% end %>
  
</ul>